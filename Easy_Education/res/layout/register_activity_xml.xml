<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_theme"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/regis_back_log"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/regis_back_log"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="注册新用户"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </RelativeLayout>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        
     
        <TextView
            android:id="@+id/regis_student"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fee8ef"
            android:gravity="center"
            android:padding="5dp"
            android:text="学生"
            android:textColor="@color/color_theme" />

        <TextView
            android:id="@+id/regis_parent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fc8ead"
            android:gravity="center"
            android:padding="5dp"
            android:text="家长"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/regis_teacher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fc8ead"
            android:gravity="center"
            android:padding="5dp"
            android:text="老师"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
	        <ImageView
	            android:id="@+id/regis_tri1"
	            android:layout_width="20dp"
	            android:layout_height="20dp"   
	            android:src="@drawable/icon_triangle" 
	       		android:layout_alignParentRight="true"
	           />
		</RelativeLayout>
		 <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <ImageView
            android:id="@+id/regis_tri2"
            android:layout_width="20dp"
            android:layout_height="20dp"         
            android:src="@drawable/icon_triangle" 
            android:layout_alignParentRight="true"
            android:visibility="invisible"
           />
        </RelativeLayout>    
        
 	<RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <ImageView
            android:id="@+id/regis_tri3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_triangle" 
            android:layout_alignParentRight="true"
             android:visibility="invisible"
            />
		</RelativeLayout>
    </LinearLayout>

</RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/regis_viewpage"
        android:layout_width="fill_parent"
        android:layout_height="279dp" >
    </android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/regis_newxtbtn" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingTop="5dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="19dp" 
        android:layout_gravity="center_horizontal"
        
        />

</LinearLayout>